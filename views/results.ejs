				  items :5,
				  itemsDesktop : [640,5],
				  itemsDesktopSmall : [414,2],
				  navigation : true
			 
				});
				
			}); 
		</script>
		
			<script src="/javascript/skycons.js"></script>
		
		<script>
			 var icons = new Skycons({"color": "#FFD700"}),
				  list  = [
					"partly-cloudy-day",
					"partly-cloudy-night","clear-day","sleet","clear-night","wind","rain","cloudy", "snow","fog"
				  ],
				  i;

			  for(i = list.length; i--; ) {
				    var weatherType = list[i],
				        elements = document.getElementsByClassName( weatherType );
				    for (e = elements.length; e--;){
				        icons.set( elements[e], weatherType );
				    }
				}

			  icons.play();
		</script>
		
